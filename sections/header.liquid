<script>
  document.addEventListener('DOMContentLoaded', function() {
    function openCartDrawer(e) {
      const cartDrawer = document.querySelector('cart-drawer');
      if (cartDrawer) {
        e.preventDefault();
        cartDrawer.open(e.currentTarget);
      }
    }

    const cartIconPrice = document.getElementById('cart-icon-price');
    if (cartIconPrice) {
      cartIconPrice.addEventListener('click', openCartDrawer);
    }
    
    // Garantir que o ícone principal também funcione sempre
    const cartIconBubble = document.getElementById('cart-icon-bubble');
    if (cartIconBubble) {
      cartIconBubble.addEventListener('click', function(e) {
         const cartDrawer = document.querySelector('cart-drawer');
         if (cartDrawer && !e.defaultPrevented) {
            e.preventDefault();
            cartDrawer.open(cartIconBubble);
         }
      });
    }

    // Subscribe to cart updates using the theme's PubSub events
    if (typeof subscribe !== 'undefined' && typeof PUB_SUB_EVENTS !== 'undefined') {
      subscribe(PUB_SUB_EVENTS.cartUpdate, (event) => {
        // Fetch the latest cart data to ensure we have the total_price
        // Sometimes event.cartData might be partial or we want to be safe
        fetch(window.Shopify.routes.root + 'cart.js')
          .then(res => res.json())
          .then(cart => {
            const priceElement = document.querySelector('#cart-icon-price .cart-total-text') || document.querySelector('#cart-icon-price');
            if (priceElement) {
              const formattedPrice = new Intl.NumberFormat(document.documentElement.lang || 'pt-BR', {
                style: 'currency',
                currency: cart.currency
              }).format(cart.total_price / 100);
              priceElement.textContent = formattedPrice;
            }
          })
          .catch(err => console.error('Error updating cart price:', err));
      });
    }
  });
</script>

